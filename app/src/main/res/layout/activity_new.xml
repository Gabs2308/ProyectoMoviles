<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4D9D9"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="200dp"
        android:layout_height="71dp"
        android:backgroundTint="#EF0D0D"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFecha"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextTextList"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:background="#FFFF"
        android:backgroundTintMode="multiply"
        android:ems="10"
        android:hapticFeedbackEnabled="false"
        android:hint="List"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spPriority"
        app:layout_constraintVertical_bias="0.151" />

    <EditText
        android:id="@+id/editTextTextDescript"
        android:layout_width="311dp"
        android:layout_height="54dp"
        android:background="#FFFF"
        android:backgroundTintMode="multiply"
        android:ems="10"
        android:hapticFeedbackEnabled="false"
        android:hint="Description"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextTittle"
        app:layout_constraintVertical_bias="0.089" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="NEW TASK"
        android:textColor="#F6F4F4"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <EditText
        android:id="@+id/editTextTextTittle"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:backgroundTintMode="multiply"
        android:ems="10"
        android:hapticFeedbackEnabled="false"
        android:hint="Tittle"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.123" />

    <Spinner
        android:id="@+id/spPriority"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:background="#FFFF"
        android:backgroundTintMode="multiply"
        android:contentDescription="Seleccione una prioridad"
        android:contextClickable="true"
        android:foregroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextDescript"
        app:layout_constraintVertical_bias="0.124" />

    <Button
        android:id="@+id/btnFecha"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:background="#FFFF"
        android:backgroundTintMode="multiply"
        android:drawableTintMode="multiply"
        android:text="Seleccionar Fecha"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextList"
        app:layout_constraintVertical_bias="0.253" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="200dp"
        android:layout_height="71dp"
        android:backgroundTint="#4CAF50"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCancel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFecha"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>